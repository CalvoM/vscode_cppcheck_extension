{
	"name": "cppcheckcmd",
	"displayName": "cppcheckcmd",
	"description": "cppcheck command",
	"publisher": "ronzhong",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.33.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:cppcheckcmd.cppcheckdir",
		"onCommand:cppcheckcmd.cppcheck"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "cppcheckcmd.cppcheck",
				"title": "cppcheckcmd cppcheck "
			},
			{
				"command": "cppcheckcmd.cppcheckdir",
				"title": "cppcheckcmd cppcheckdir"
			}
		],
		"keybindings": [
			{
				"command": "cppcheckcmd.cppcheck",
				"key": "ctrl+q",
				"mac": "cmd+f2",
				"when": "editorTextFocus"
			},
			{
				"command": "cppcheckcmd.cppcheckdir",
				"key": "ctrl+w",
				"mac": "cmd+f3",
				"when": "editorTextFocus"
			}
		],
		"configuration": {
			"type": "object",
			"title": "simple cppcheck",
			"properties": {
				"cppcheck.isEnable": {
					"type": "boolean",
					"default": true,
					"description": "Enable or disable the cppcheck"
				},
				"cppcheck.severity": {
					"type": "string",
					"default": "error",
					"description": "records equal to the severity here should be filtered out from cppcheck report"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"@types/cross-spawn": "^6.0.0",
		"@types/mocha": "^2.2.42",
		"@types/node": "^10.14.6",
		"tslint": "^5.12.1",
		"typescript": "^3.3.1",
		"vscode": "^1.1.28"
	},
	"dependencies": {
		"@types/xmldom": "^0.1.29",
		"cross-spawn": "^6.0.5",
		"xmldom": "^0.1.27",
		"xpath": "0.0.27"
	},
	"license": "(LGPL-2.0 or MIT)"
}
